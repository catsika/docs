{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Keymint API Documentation",
  "colors": {
    "primary": "#2563EB",
    "light": "#60A5FA", 
    "dark": "#1E40AF"
  },
  "search": {
    "prompt": "Search Keymint documentation..."
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "index"
            ]
          },
          {
            "group": "SDKs & Integration",
            "pages": [
              "sdks/nodejs",
              "sdks/python"
            ]
          },
          {
            "group": "Topics",
            "pages": [
              "topics/offline-key"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Authentication & Basics",
            "pages": [
              "api-reference/introduction",
              "api-reference/overview",
              "api-reference/authentication",
              "api-reference/rate-limits",
              "api-reference/error-codes"
            ]
          },
          {
            "group": "Customer Management",
            "pages": [
              "api-reference/customers/get-all",
              "api-reference/customers/create",
              "api-reference/customers/get-with-keys",
              "api-reference/customers/get-by-id",
              "api-reference/customers/update",
              "api-reference/customers/delete",
              "api-reference/customers/toggle-status"
            ]
          },
          {
            "group": "License Key Management",
            "pages": [
              "api-reference/license-keys/get-info",
              "api-reference/license-keys/create",
              "api-reference/license-keys/activate",
              "api-reference/license-keys/deactivate",
              "api-reference/license-keys/block",
              "api-reference/license-keys/unblock"
            ]
          }
        ]
      },
      {
        "tab": "Features & Help",
        "groups": [
          {
            "group": "Advanced Features",
            "pages": [
              "security/index"
            ]
          },
          {
            "group": "Customer Portal",
            "pages": [
              "help/customer-portal/login"
            ]
          },
          {
            "group": "Support",
            "pages": [
              "help/faqs"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "dashboard",
          "icon": "chart-line",
          "href": "https://app.keymint.dev"
        },
        {
          "anchor": "community",
          "icon": "discord", 
          "href": "https://github.com/keymint-dev/discussions"
        },
        {
          "anchor": "status",
          "icon": "signal",
          "href": "https://status.keymint.dev"
        }
      ]
    }
  },
  "logo": {
    "light": "https://keymint.dev/logo.png",
    "dark": "https://keymint.dev/dmlogo.png",
    "href": "https://keymint.dev/"
  },
  "navbar": {
    "links": [
      {
        "label": "Community",
        "href": "https://github.com/keymint-dev/discussions"
      },
      {
        "label": "Support",
        "href": "mailto:support@keymint.dev"
      },
      {
        "label": "Status",
        "href": "https://status.keymint.dev"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://app.keymint.dev/signup"
    }
  },
  "contextual": {
    "options": []
  },
  "footer": {
    "socials": {
      "github": "https://github.com/keymint-dev",
      "twitter": "https://twitter.com/keymint_dev",
      "linkedin": "https://linkedin.com/company/keymint"
    }
  }
}
